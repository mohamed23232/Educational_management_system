<!DOCTYPE html>
<html>

<head>
    <title>Subject</title>
    <link rel="stylesheet" href="/view_assg.css">
</head>

<body>
    <h1>Subject</h1>
    <div class="top-button">
        <% if (user.role==='admin' ) { %>
            <a href="/auth/admin_dashboard" class="button">Back to Dashboard</a><br><br>
    </div>

    <table>
        <thead>
            <tr>
                <th>Subject</th>
                <th>Teacher</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% subjects.forEach(subject=> { %>
                <tr>
                    <td>
                        <%= subject.name %>
                    </td>
                    <td>
                        <%= subject.teacher?.username %>
                    </td>
                    <td>
                        <%= subject.description %>
                    </td>
                    <td>
                        <a href="/subject/edit/<%= subject._id %>" class="button">Edit</a>
                        <a href="/subject/details/<%= subject._id %>" class="button">View Students</a>
                        <form action="/subject/delete/<%= subject._id %>" method="POST"
                            onsubmit="return confirm('Are you sure you want to delete this subject?');">
                            <button type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>
    <% } else if (user.role==='teacher' ) { %>
        <a href="/auth/teacher_dashboard" class="button">Back to Dashboard</a><br><br>

        <table>
            <thead>
                <tr>
                    <th>Subject</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% subjects.forEach(subject=> { %>
                    <% if (subject.teacher?.id===user.id) { %>
                        <tr>
                            <td>
                                <%= subject.name %>
                            </td>
                            <td>
                                <%= subject.description %>
                            </td>
                            <td>
                                <a href="/subject/details/<%= subject._id %>" class="button">View Students</a>
                            </td>
                        </tr>
                        <% } %>
                            <% }) %>
            </tbody>
        </table>
        <% } else if (user.role==='student' ) { %>
            <a href="/auth/student_dashboard" class="button">Back to Dashboard</a><br><br>

            <table>
                <thead>
                    <tr>
                        <th>Subject</th>
                        <th>Teacher</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                    <% subjects.forEach(subject=> { %>
                        <tr>
                            <td>
                                <%= subject.name %>
                            </td>
                            <td>
                                <%= subject.teacher?.username %>
                            </td>
                            <td>
                                <%= subject.description %>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
            <% } %>

</body>

</html>