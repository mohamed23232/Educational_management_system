      <% subjects.forEach(subject=> { %>
        <option value="<%= subject._id %>">
          <%= subject.name %>
        </option>
        <% }) %>
    </select><br /><br /> -->

    <button type="submit">Create Assignment</button>
    <a href="/auth/teacher_dashboard" class="button">Back to Dashboard</a>
  </form>

</body>

</html>